1.   // Print the fibonacci series upto the nth term
#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter the nth term:";
    cin>>n;
    
    int i=3;
    int fterm=0;
    int sterm=1;
    if(n==0){
        cout<<fterm;
    }else if(n==1){
        cout<<fterm<<" "<<sterm;
    }else if(n>=2){
        cout<<fterm<<" "<<sterm;
        while(i<=n){
            int tterm=fterm+sterm;
            cout<<" "<<tterm;
            fterm=sterm;
            sterm=tterm;
            i++;
        }
    }
    return 0;
}






//2. program to reverse the digits of a number
#include<iostream>
#include<stack>
#include<math.h>
using namespace std;

int main(){
    int n=123;
    int ans=0;
    stack<int> st;
    while(n>0){
        int dig=n%10;
        st.push(dig);
        n/=10;
    }
    int i=0;
    while(!st.empty()){
        int temp=st.top()*(pow(10,i));
        i++;
        ans+=temp;
        st.pop();
    }
    cout<<ans;
    return 0;
}



//2. program to reverse the digits of a number
#include<iostream>
#include<stack>
#include<math.h>
//#include<bits/stdc++.h>
#include<string>
#include<algorithm>
using namespace std;

int main(){
    int n=123;
    string temp = to_string(n);
    reverse(temp.begin(), temp.end());
    int ans=stoi(temp);
    cout<<ans;
    return 0;
}



//3. program to check if a number is perfect
#include<bits/stdc++.h>
using namespace std;

int main(){
    int n=7;
    vector<int> arr;
    for(int i=1;i<=n/2;i++){
        if(n%i==0) arr.push_back(i);
    }
    int sum=0;
    for(int i: arr){
        sum+=i;
    }
    if(sum==n) cout<<"true";
    else cout<<"false";
    return 0;
}
